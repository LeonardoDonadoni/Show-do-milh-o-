        h1 { color: #ffd700; text-shadow: 2px 2px 4px #000; }
        button { background-color: #32cd32; color: white; border: none; padding: 10px 20px; margin: 5px; cursor: pointer; border-radius: 5px; }
        button:hover { background-color: #228b22; }
        .option { background-color: #ff8c00; width: 100%; margin: 10px 0; }
        .option:hover { background-color: #ff4500; }
        .correct { background-color: #00ff00 !important; }
        .wrong { background-color: #ff0000 !important; }
        #lifelines button { background-color: #1e90ff; }
        #lifelines button:hover { background-color: #104e8b; }
        #lifelines button:disabled { background-color: #a9a9a9; cursor: not-allowed; }
        #godmod { background-color: #ffd700; color: #000; }
        #godmod.active { background-color: #ff0000; }
    </style>
